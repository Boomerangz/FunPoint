<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rest_background"
    android:gravity="right"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >



                <LinearLayout
                    android:id="@+id/minor_header_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="33dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/food_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLines="2"
                        android:text="Food title"
                        android:textSize="14pt" />

                    <TextView
                        android:id="@+id/food_kitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Индийская кухня, Китайская кухня"
                        android:textColor="#ffffff"
                        android:textSize="7pt" />

                    <TextView
                        android:id="@+id/food_avg_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Food lunch price"
                        android:textColor="@color/white" />
                </LinearLayout>
            <RelativeLayout
                android:id="@+id/major_header_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/switch_back_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/minor_header_layout"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:src="@drawable/previous"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/switch_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/minor_header_layout"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/next" />
            </RelativeLayout>

            <ViewFlipper
                android:id="@+id/switcher"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right" >

                <LinearLayout
                    android:id="@+id/main_info_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp" >

                        <RelativeLayout
                            android:id="@+id/checkin_block"
                            android:layout_width="fill_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="74dp"
                            android:layout_marginLeft="@dimen/margin"
                            android:layout_marginRight="@dimen/margin"
                            android:layout_weight="1"
                            android:background="#ffffff" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="Я здесь"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:shadowColor="@color/black"
                 				android:shadowDx="1"
                  				android:shadowDy="1"
                  				android:shadowRadius="1"
                                android:typeface="sans" />

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/checkin_icon" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/map_block"
                            android:layout_width="fill_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="@dimen/margin"
                            android:layout_weight="1"
                            android:background="#ffffff" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="на карте"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:shadowColor="@color/black"
                 				android:shadowDx="1"
                  				android:shadowDy="1"
                  				android:shadowRadius="1"
                                android:typeface="sans" />

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/map_icon" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/todo_block"
                            android:layout_width="fill_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="@dimen/margin"
                            android:layout_weight="1"
                            android:background="#ffffff" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="на карте"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:shadowColor="@color/black"
                 				android:shadowDx="1"
                  				android:shadowDy="1"
                  				android:shadowRadius="1"
                                android:typeface="sans" />

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/map_icon" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/margin" >

                        <RelativeLayout
                            android:id="@+id/herenow_block"
                            android:layout_width="fill_parent"
                            android:layout_height="85dp"
                            
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="74dp"
                            android:layout_marginLeft="@dimen/margin"
                            android:layout_marginRight="@dimen/margin"
                            android:layout_weight="1"
                            android:background="#ffffff" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="здесь сейчас"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:shadowColor="@color/black"
                 				android:shadowDx="1"
                  				android:shadowDy="1"
                  				android:shadowRadius="1"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/here_now_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:text="5"
                                android:textColor="#ffffff"
                                android:textSize="55dp"
                                android:textStyle="bold"
                                android:shadowColor="@color/black"
                 				android:shadowDx="1"
                  				android:shadowDy="1"
                  				android:shadowRadius="1"
                                android:typeface="sans" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/avg_price_block"
                            android:layout_width="fill_parent"
                            android:layout_height="85dp"
                            android:layout_marginRight="@dimen/margin"
                            android:layout_weight="1"
                            android:background="#ffffff" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="ланч"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:shadowColor="@color/black"
                 				android:shadowDx="1"
                  				android:shadowDy="1"
                  				android:shadowRadius="1"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/food_lunch_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:text="80000"
                                android:textColor="#ffffff"
                                android:textSize="50dp"
                                android:textStyle="bold"
                                android:shadowColor="@color/black"
                 				android:shadowDx="1"
                  				android:shadowDy="1"
                  				android:shadowRadius="1"
                                android:typeface="sans" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin" >

                        <LinearLayout
                            android:id="@+id/address_block"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin"
                            android:layout_marginRight="@dimen/margin"
                            android:background="#ffffff"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/food_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="ул. Гоголя, д. 84, г. Алматы"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:typeface="sans" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin" >

                        <LinearLayout
                            android:id="@+id/phone_block"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin"
                            android:layout_marginLeft="@dimen/margin"
                            android:layout_marginRight="@dimen/margin"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/plus" />

                    <LinearLayout
                        android:id="@+id/comment_list_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>

                <TableLayout
                    android:id="@+id/gallery_table"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="vertical" >
                </TableLayout>
            </ViewFlipper>
        </LinearLayout>
    </ScrollView>

</LinearLayout>