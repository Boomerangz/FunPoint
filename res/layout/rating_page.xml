<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/menu_light_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <ImageView
            android:layout_width="111dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/jam_logo" />

        <Button
            android:id="@+id/profile_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/man_button"
            android:text="" />

        <Button
            android:id="@+id/fast_check_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@id/profile_button"
            android:background="@drawable/flag_button"
            android:text="" />
    </RelativeLayout>

    <TextView
        android:id="@+id/points_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/light_grey"
        android:paddingLeft="@dimen/margin"
        android:text="user_name"
        android:textSize="10pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сообщение" />

    <LinearLayout
        android:id="@+id/rating_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>